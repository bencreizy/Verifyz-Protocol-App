modules = ["nodejs-20"]
run = "npm run dev -- --host 0.0.0.0"
hidden = [".config", ".git", "generated-icon.png", "node_modules", "dist"]

[nix]
channel = "stable-24_05"

[env]
PORT = "3000"

[deployment]
deploymentTarget = "webapp"
build = ["sh", "-c", "npm run build"]
run = ["sh", "-c", "NODE_ENV=production npm start"]

[[ports]]
localPort = 3000
externalPort = 3000

[workflows]
runButton = "Dev Server"

[[workflows.workflow]]
name = "Dev Server"
mode = "sequential"
author = "manual"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"
waitForPort = 3000

[agent]
expertMode = true
