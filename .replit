# Main entrypoint and run command
run = "npm run dev"

# Language definition
language = "nodejs"

# Prevent UPM auto-detection
enablePackages = "true"
disableGuessing = "true"

[nix]
# Pin Nix environment
channel = "nixpkgs-23_05"

[packager]
# Disable UPM completely
language-packs = []
ignore-run-and-debug-config = true

[agent]
expertMode = true
